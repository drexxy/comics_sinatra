<form action="/add" method="POST">
	<fieldset>
    <label for="comic-series">Comic Series:</label>
    <input type="text" name="comic-series" id="comic-series">
  </fieldset>
  <fieldset>
    <label for="issue">Issue #:</label>
    <input type="text" name="issue" id="issue">
  </fieldset>
  <fieldset>
    <label for="title">Title:</label>
    <input type="text" name="title" id="title">
  </fieldset>
  <fieldset>
    <label for="image-path">Image URL:</label>
    <input type="text" name="image-path" id="image-path">
  </fieldset>
  <fieldset>
    <label for="synopsis">Synopsis:</label>
    <textarea cols="40" rows="10" maxlength="500" name="synopsis" id="synopsis">Add a synopsis</textarea>
  </fieldset>
  <fieldset>
    <label for="submit"></label>
    <input type="submit" value="Submit" name="submit" id="submit">
  </fieldset>

</form>

<% if flash[:added] %> 
<% db = SQLite3::Database.new("comics.db")  %>
<% result = db.execute("SELECT * FROM comics ORDER BY(ID) DESC LIMIT 1") %>
  <%= "You have succesfully added the Comic: #{result[0][1]} Issue: #{result[0][2]} with ID: #{result[0][0]} " %>
<% end %>